<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/grey" android:startColor="@color/black_overlay" />
            <corners android:radius="25dp" />
            <stroke android:color="@color/red_800" android:width="1px"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/red_800" android:startColor="@color/red_800" />
            <corners android:radius="25dp" />
            <stroke android:color="@color/red_800" android:width="1px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/red_800" android:startColor="@color/snack_text" />
            <corners android:radius="25dp" />
            <stroke android:color="@color/red_800" android:width="1px"/>
        </shape>
    </item>
</selector>

