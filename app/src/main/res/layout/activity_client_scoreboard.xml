                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
