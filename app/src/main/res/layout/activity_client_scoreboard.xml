                    android:gravity="center_vertical|end"
                    android:textAlignment="textEnd"
                    android:textSize="35sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/chor3"
                android:layout_width="match_parent"
