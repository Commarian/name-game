            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/scoreboardInfoC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fontFamily="@font/advent_pro_semibold"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adViewCB" />

    <TextView
        android:id="@+id/tvReadyCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/transparent"
        android:fontFamily="@font/advent_pro_semibold"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/messageButtonClientScoreBoard"
        app:layout_constraintStart_toEndOf="@+id/leave_game_client_scoreboard" />



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/leave_game_client_scoreboard"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/helper_exit_door" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/messageButtonClientScoreBoard"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/old_message" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/helper_ready_scoreboard_client"
        android:layout_width="77dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/btnReadyC"
        app:layout_constraintStart_toStartOf="@+id/btnReadyC"
        app:layout_constraintTop_toTopOf="@+id/btnReadyC"
        app:srcCompat="@drawable/helper_ready" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_client_scoreboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:background="#FA2C2C2C"
        android:translationZ="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adViewCB">

    </androidx.fragment.app.FragmentContainerView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

