<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ssb_mv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".HomeMade.Server.ServerScoreboard">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_7_ssb"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="145dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:srcCompat="@drawable/cloud1"
        tools:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_3_ssb"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="5dp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloud3"
        tools:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_6_ssb"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="5dp"
        android:background="@color/transparent"
        android:rotationX="180"
        android:rotationY="180"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plane"
        tools:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_4_ssb"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="5dp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloud4"
        tools:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_0_ssb"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plane"
        tools:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_2_ssb"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="5dp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloud2"
        tools:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_8_ssb"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:srcCompat="@drawable/cloud7"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/btnReadyS"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/xml_ready"
        android:text="@string/ready"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/leave_game_server_scoreboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/btnReadyS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scoreboardInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hor0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/avatarSB1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/avatar0" />

                <TextView
                    android:id="@+id/userSS1"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical"
                    android:textSize="27sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/scoreSS1"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical|end"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hor1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/avatarSB2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/avatar0" />

                <TextView
                    android:id="@+id/userSS2"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical"
                    android:textSize="27sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/scoreSS2"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical|end"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hor2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/avatarSB3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/avatar0" />

                <TextView
                    android:id="@+id/userSS3"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical"
                    android:textSize="27sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/scoreSS3"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical|end"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hor3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/avatarSB4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/avatar0" />

                <TextView
                    android:id="@+id/userSS4"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical"
                    android:textSize="27sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/scoreSS4"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical|end"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hor4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/avatarSB5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/avatar0" />

                <TextView
                    android:id="@+id/userSS5"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical"
                    android:textSize="27sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/scoreSS5"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical|end"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hor5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/avatarSB6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    app:srcCompat="@drawable/avatar0" />

                <TextView
                    android:id="@+id/userSS6"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical"
                    android:textSize="27sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/scoreSS6"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:gravity="center_vertical|end"
                    android:textAlignment="textEnd"
                    android:textSize="30sp"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvReadySS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/transparent"
        android:fontFamily="@font/advent_pro_semibold"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/messageButtonServerScoreboard"
        app:layout_constraintStart_toEndOf="@+id/leave_game_server_scoreboard" />

    <TextView
        android:id="@+id/scoreboardInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fontFamily="@font/advent_pro_semibold"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adViewSB" />



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/leave_game_server_scoreboard"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/helper_exit_door" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/messageButtonServerScoreboard"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/old_message" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/helper_ready_scoreboard_server"
        android:layout_width="77dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/btnReadyS"
        app:layout_constraintStart_toStartOf="@+id/btnReadyS"
        app:layout_constraintTop_toTopOf="@+id/btnReadyS"
        app:srcCompat="@drawable/helper_ready" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_server_scoreboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FA2C2C2C"
        android:translationZ="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adViewSB">

    </androidx.fragment.app.FragmentContainerView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewSB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>